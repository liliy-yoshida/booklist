<!--booklist一覧ページ--!>

<img class="book_photo" src="https://www.pakutaso.com/shared/img/thumb/ELL75_yousyohondana20120620_TP_V.jpg" >

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user_id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.comment %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td> 
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Book', new_book_path %>
