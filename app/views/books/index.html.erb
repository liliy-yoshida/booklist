<!--booklist一覧ページ--!>
<img src="https://magazine.coconala.com/wp-content/uploads/2020/09/shutterstock_485255002-1.jpg" alt="本とコーヒー">

<p id="notice"><%= notice %></p>

<div class="booklist">
<h1>Books</h1></div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user_id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.comment %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td> 
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="new_book">
<%= link_to 'New Book', new_book_path %>
<!--home.html画面に戻る--!>
<%= link_to 'Back', toppages_home_path %>
</div>
